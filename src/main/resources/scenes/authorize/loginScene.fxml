<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox id="background" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="320.0" stylesheets="@../../styles/authorize/loginPage.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.alkitmessenger.client.controllers.authorize.LoginController">
   <children>
      <Label text="Авторизация" textFill="WHITE">
         <font>
            <Font name="System Bold" size="26.0" />
         </font>
      </Label>
      <VBox alignment="TOP_CENTER" fillWidth="false" prefHeight="300.0" prefWidth="320.0" spacing="20.0">
         <padding>
            <Insets top="30.0" />
         </padding>
         <children>
            <VBox prefHeight="50.0" prefWidth="200.0">
               <children>
                  <Label text="Почта" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
                  <TextField fx:id="mailField" />
               </children>
            </VBox>
            <VBox prefHeight="50.0" prefWidth="200.0">
               <children>
                  <Label text="Пароль" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
                  <PasswordField fx:id="passwordField" />
               </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="70.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Button id="login_button" mnemonicParsing="false" onMouseClicked="#onAuthorizeClick" prefWidth="150.0" text="Авторизоваться" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  <Label onMouseClicked="#onRegistrationClick" text="Зарегистрироваться" textFill="WHITE" underline="true">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Label>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</VBox>
